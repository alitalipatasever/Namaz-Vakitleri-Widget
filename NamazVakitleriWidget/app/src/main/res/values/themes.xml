<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NamazVakitleriWidget" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/lacivert</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/lacivert</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/keep_calm</item>
    </style>

    <style name="Theme.NamazVakitleriWidget.AppWidgetContainerParent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">0dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
        <item name="android:textColor">@color/lacivert</item>
    </style>

    <style name="Theme.NamazVakitleriWidget.AppWidgetContainer" parent="Theme.NamazVakitleriWidget.AppWidgetContainerParent" />

    <style name="Theme.NamazVakitleriWidget.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NamazVakitleriWidget.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="Theme.NamazVakitleriWidget.PopupOverlay" parent="Theme.AppCompat.Light.NoActionBar" />
</resources>